    })
  }
  function addToWishlist(proId) {
    $.ajax({
      url: "/add-to-wishList/" + proId,
      method: "get",
      success: (Response) => {
        if (Response) {
          //location.reload()
          let count = $('#wishList-count').html()
          count = parseInt(count) + 1
          $("#wishList-count").html(parseInt(count))
        }
      }
    })
  }
</script>

