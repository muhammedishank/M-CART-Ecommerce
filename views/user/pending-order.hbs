<section class="h-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-10 col-xl-8">
        <div class="card" style="border-radius: 10px;">

          <div class="card-header px-4 py-5 text-gray-400 text-center">
            <h5 class="text-muted mb-0">Payment Cancelled Order Products <span style="color: #a8729a;"></span></h5>
          </div>
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              {{!-- <p class="lead fw-normal mb-0" style="color: #a8729a;">Receipt</p> --}}
              <p class="small text-muted mb-0">Your order Id : {{orderedDetails._id}}</p>
            </div>
            {{#each orderProducts}}
            <div class="card shadow-0 border mb-4">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-2">
                    <img src="/uploads/{{this.product.image.[0].images}}" class="img-fluid" alt="Phone">
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0">{{this.product.Product}}</p>
                  </div>
                  {{!-- <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">{{this.product.Color}}</p>
                  </div> --}}
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">Qty: {{this.quantity}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">{{../orderedDetails.paymentMethod}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small"><span style="color: rgb(245, 7, 19);"> {{../orderedDetails.status}}</span></p>
                  </div>
                  {{!-- <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">{{../orderedDetails.date}}</p>
                  </div> --}}
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center"> 
                   <a href="/"
                    class="btn btn-primary">Go Shop</a>
                  </div>
                 
                </div>

              </div>
            </div>
            {{/each}}

